{
    "version": 8,
    "configurePresets": [
        {
            "name": "tawqa",
            "displayName": "Пользовательская предустановка конфигурации",
            "description": "Настраивает генератор Ninja, сборку и каталог установки",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        }
    ]
}